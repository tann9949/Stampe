<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.stampe.StampActivity">

    <ImageView
        android:layout_width="@dimen/logo_w_h"
        android:layout_height="@dimen/logo_w_h"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:src="@drawable/splash" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stampNum"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Your current stamp"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/stampNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:text="0"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stampNum"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Your current benefits"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/benefitNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="0"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REDEEM YOUR BENEFIT HERE!"
        android:id="@+id/redeem"/>


</LinearLayout>
